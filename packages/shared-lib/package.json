{
  "name": "@repo/shared-lib",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "tsup",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "default": "./src/*.ts"
    }
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.10.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
